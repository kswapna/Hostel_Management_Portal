{{extend 'newlayout.html'}}
<script type="text/javascript">
function submitform()
{
  document.myform.submit();
}
</script>
<p style="display:inline;float:right;margin-right:4.5;">{{=A('View all complaints',_href=URL(r=request,f='vcomplaint'))}}</p>

<form id="myform" name="myform" action="staff_vcomplaint" style="display:inline;">
<select name="place" onchange="submitform()" id="place"> 
<option value="">Filter By</option>
<option value="Carpenter">Carpenter</option>
<option value="Plumber">Plumber</option>
<option value="Electrician">Electrician</option>
<option value="Other">Other</option>
<option value="ALL">All</option>
</select>
</form><h2>{{=filtered_by}}</h2>
<form id="tabel" name="tabel" action="markcom">

<table border="1" width="100%" align="center" name="d">
<tr>
  <th>Sr.No</th>
  <th>User Name</th>
  <th>Access</th>
  <th>Category </th>
  <th>Body </th>
  <th>Date </th>
  <th>Time</th>
    <th>Available Time</th>
    <th>Confirm</th>
</tr>
 {{c=1}}
      <script>
    function poi()
        {
            
            
            window.location="../default/listing.pdf?function=staff_vcomplaint&"+"place={{=filtered_by}}";
        }
            function poi1()
        {
            
            
            var k=document.URL;
            var n=k.split("?");
            if(n[1]==undefined)
            window.location="../default/staff_vcomplaint.csv";
            else
            window.location="../default/staff_vcomplaint.csv?"+n[1];
        }
    </script>
    <a onclick="poi()" style="cursor:pointer;">PDF</a>  <a onclick="poi1()" style="cursor:pointer;">CSV</a> 
  {{for row in complaints:}}
 
  <tr>
  <td>{{=c}} </td>
  {{c=c+1}}
  <td>{{=row.User}} </td>
  <td>{{=row.access}} </td>
  <td>{{=row.category}} </td>
  <td>{{=row.complaint_body}} </td>
  <td>{{=row.Date}} </td>
  <td>{{=row.Time}} </td>
      <td>{{=row.AvailableTime}}</td>
  <td align="center"><input type="checkbox" name="option"  value="{{=row.id}}" size="33"/></td>
  </tr>
  {{pass}}
</table>
{{pass}}
    <br />
<input type="submit" value="Confirm" style="float:right;"/>

</form>
